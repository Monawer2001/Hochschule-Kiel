# أنشئ مجلد للمشروع
mkdir hochschulbewerbung
cd hochschulbewerbung

# أنشئ بيئة افتراضية
python -m venv venv
source venv/bin/activate  # على لينكس/ماك
venv\Scripts\activate     # على ويندوز

# ثبت Django
pip install django

# أنشئ مشروع جديد
django-admin startproject core .

# أنشئ تطبيق للتقديم
python manage.py startapp bewerbung
